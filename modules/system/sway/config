include /etc/sway/config.d/*

output * bg /home/tod/.wallpaper.jpg fill

#todo(add some life to my unused lock)
exec swayidle -w \
      timeout 300 'swaylock --clock --screenshot --effect-pixelate 9' \
      timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"'\
      before-sleep 'swaylock --clock --screenshot --effect-pixelate 9'


input type:tablet_pad {
    map_to_output DP-1
}

input type:tablet_tool {
    map_to_output DP-1
}



set $meta Mod4
set $alt Mod1
set $ctrl Ctrl
set $term kitty 
set $menu wofi --show run

default_border pixel 3px
focus_follows_mouse yes
focus_wrapping no
floating_modifier $alt

workspace 1 output DP-1
workspace 2 output DP-1
workspace 3 output DP-1
workspace 4 output DP-2
workspace 5 output DP-2
workspace 6 output DP-2



#Basic
bindsym $alt+Shift+q kill
bindsym $alt+Shift+r reload

bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right

bindsym $alt+Ctrl+h resize shrink width 32 px or 32 ppt
bindsym $alt+Ctrl+j resize grow height 32 px or 32 ppt
bindsym $alt+Ctrl+k resize shrink height 32 px or 32 ppt
bindsym $alt+Ctrl+l resize grow width 32 px or 32 ppt

bindsym $alt+f fullscreen
bindsym $alt+Shift+f floating toggle
bindsym $ctrl+Space layout toggle
#scratchpad
bindsym $alt+Shift+minus move scratchpad
bindsym $alt+minus scratchpad show

bindsym $alt+Tab workspace next
bindsym $alt+Shift+Tab workspace prev

bindsym $alt+u workspace 1
bindsym $alt+i workspace 2
bindsym $alt+o workspace 3

bindsym $meta+u workspace number 4
bindsym $meta+i workspace number 5
bindsym $meta+o workspace number 6

bindsym $alt+Shift+u move container to workspace 1
bindsym $alt+Shift+i move container to workspace 2
bindsym $alt+Shift+o move container to workspace 3

bindsym $meta+Shift+u move container to workspace 4
bindsym $meta+Shift+i move container to workspace 5
bindsym $meta+Shift+o move container to workspace 6

bindsym $alt+Return exec $term


bindsym $meta+l exec swaylock
bindsym $alt+p exec $menu
bindsym $alt+Shift+p exec dmenu_run
bindsym $meta+e exec $term ranger
bindsym $meta+r exec $menu
bindsym $meta+Shift+r exec dmenu_run
